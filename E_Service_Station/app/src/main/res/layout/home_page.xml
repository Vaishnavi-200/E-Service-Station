<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent" android:layout_height="match_parent"
android:orientation="vertical">

    <ImageView
    android:layout_width="230dp"
    android:layout_height="140dp"
    android:src="@drawable/img5"
        android:layout_gravity="center" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="50dp"
    android:layout_height="wrap_content">




    <android.support.v7.widget.CardView
        android:id="@+id/card_view_service"
        xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        card_view:cardCornerRadius="50dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:id="@+id/img1"
                android:src="@drawable/img1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHICLE SERVICE STATION"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#299438"
                android:id="@+id/tv_service"

                />


        </LinearLayout>
    </android.support.v7.widget.CardView>





    <android.support.v7.widget.CardView
        android:id="@+id/card_view_charging"
        xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="50dp"
        android:layout_marginTop="80dp"
        card_view:cardElevation="5dp"
        android:layout_margin="8dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:id="@+id/img2"
                android:src="@drawable/img2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHICLE CHARGING STATION"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#299438"
                android:id="@+id/tv_charging"

                />





        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="40dp"
    android:layout_height="wrap_content">




    <android.support.v7.widget.CardView
        android:id="@+id/card_view_feedback"
        xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="50dp"
        android:layout_marginTop="135dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:id="@+id/img3"
                android:src="@drawable/img3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FEEDBACK"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#299438"
                android:id="@+id/tv_feedback"

                />


        </LinearLayout>
    </android.support.v7.widget.CardView>





    <android.support.v7.widget.CardView
        android:id="@+id/card_view_aboutus"
        xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="50dp"
        android:layout_margin="8dp"
        android:layout_marginTop="135dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:id="@+id/img4"
                android:src="@drawable/img4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABOUT APP"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#299438"
                android:id="@+id/tv_aboutapp"

                />





        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>









</LinearLayout>