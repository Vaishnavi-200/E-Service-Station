<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="35dp"
        android:layout_margin="20dp"
        android:id="@+id/cv"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E SERVICE STATION"
                android:textColor="#299438"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/helpus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Information"
                android:textColor="#299438"
                android:textSize="30dp"
                android:layout_marginTop="50dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:id="@+id/help1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textColor="#299438"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:id="@+id/help2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Mobile No."
                android:textColor="#299438"
                android:textSize="30dp"
                android:textStyle="normal"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/help3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9686057088"
                android:textColor="#1167b1"
                android:textSize="25dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/help31"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="100sp"
                android:src="@drawable/ph"
                android:layout_gravity="center"
                android:id="@+id/img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technical Support Mno."
                android:textColor="#299438"
                android:textSize="30dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:id="@+id/help4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8762244115"
                android:textColor="#1167b1"
                android:textSize="25dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/help41"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="100sp"
                android:src="@drawable/ph"
                android:layout_gravity="center"
                android:id="@+id/img1"/>







        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


