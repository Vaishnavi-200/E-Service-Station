<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="35dp"
        android:layout_margin="20dp"
        android:id="@+id/cv"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E SERVICE STATION"
                android:textColor="#299438"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Application provides and delivers end-to-end EV charging, handling both charging and seervice station operations.The provision of services via internet,thus E service may also include E commerce,although it may also include online services"
                android:textColor="#299438"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVELOPED BY:"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#299438"
                android:layout_marginTop="40dp"
                android:id="@+id/dv1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaishnavi Desai"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#299438"
                android:layout_marginTop="20dp"
                android:id="@+id/vaishnavi1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sneha Maloji"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#299438"
                android:layout_gravity="center"
                android:id="@+id/sneha1"
                />




        </LinearLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>